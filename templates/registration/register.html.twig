{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="pt-3 mt-3 cRegister">
        <h1 class="textCenter">Demande de création de compte</h1>
            {{ form_start(registrationForm, {'attr': {'class': 'form-group'}}) }}
            {% if form_errors(registrationForm.email) %}
            	<div class="alert alert-light" role="alert"><span class="badge bg-danger">Erreur</span> Il y a déjà un utilisateur avec cet email, cliquez <a href="{{ path('forgottenpassword') }}">ici</a> si vous souhaitez modifier votre mot de passe</div>
            {% endif %}
            <div class="mb-3">
            	{{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {'attr': {'class' : 'form-control', 'placeholder' : 'Saisir votre email'} }) }}
            </div>
            <button type="submit" class="btn btn-secondary">Envoyer</button>
            {{ form_end(registrationForm) }}
    </div>
{% endblock %}
