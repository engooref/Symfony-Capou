{% extends 'base.html.twig' %}
{% block title %}Control{% endblock %}

{% block body %}
<style>
	.data { width: 11%; }   
</style>

<link rel="stylesheet" href="./css/control.css">


<div class="container-fluid" id="control">
	<center>
		<fieldset> 
     		<legend>Niveaux d'humidite dans le sol :	
     			<button id="level_1" class="btn btn-light" onclick="humidite(1)">Niveau 1</button>	
    			<button id="level_2" class="btn btn-light" onclick="humidite(2)">Niveau 2</button>	
    			<button id="level_3" class="btn btn-light" onclick="humidite(3)">Niveau 3</button>	
    		</legend>
     		<legend>Niveau d'humidite dans l'air :	
     			<button id="level_0" class="btn btn-light" onclick="humidite(0)">Humidite dans l'air</button>
     		</legend>
     		<div class="slidecontainer">
              	<input type="range" min="1" max="100" value="50" class="slider" id="sliderHum">
              	<span>Moyenne Acceptable:<div id='moyenneHum'></div></span>
            </div>	
		</fieldset>
   	</center>
    
    <div class="row">
        <div class="col-md-6 left" id="left" style="height:inherit;">
        	<div id="map" class="map"></div>
        </div>
        <div class="col-md-6 right" id="right" style="height:inherit;">
        	<button type="button" class="btn btn-light" id="returnButton">Exit</button>
        	<button type="button" class="btn btn-light" id="saveButton">Save</button>
        	
        	<table class="table table-dark">
            	<tr>
              		<th scope="row">Identifiant : </th>
              		<td class="data" id="id"></td>
            	</tr>
            	<tr>
              		<th scope="row">Coordonnées GPS : </th>
              		<td class="data" id="gps"></td>
            	</tr>
            	<tr>
              		<th scope="row">Niveau de batterie : </th>
              		<td class="data" id="bat"></td>
            	</tr>
            	<tr>
              		<th scope="row">Date de la dernière donnée acquise : </th>
              		<td class="data" id="dataEnd"></td>
            	</tr>
            	<tr>
              		<th scope="row">Humidité : </th>
              		<td class="data" id="hum"></td>
            	</tr>
            	<tr>
              		<th scope="row">Température : </th>
              		<td class="data" id="temp"></td>
            	</tr>
            </table>
        		<div id="chart"></div>
        	
        	
        	<button type="button" class="btn btn-light" id="syncButton">Sync</button>
        	<button type="button" class="btn btn-light" id="pingButton">Ping</button>
        	<!-- if(connected){
        		<span class="connected">Connecté</span>
        	}else{
        		<span class="disconnected">Déconnecté</span>
        	} -->
        </div>
    </div>
</div>
{{ parent() }}
{{ encore_entry_script_tags('map') }}

{% endblock %}
